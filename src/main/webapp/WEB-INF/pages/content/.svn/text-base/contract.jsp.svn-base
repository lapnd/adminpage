<form method="post" action="">
	<div class="group fixed">
		<label>Usual text input</label> <input type="text"
			value="content here ...">
	</div>
	<div class="group fixed">
		<label>Active text input</label> <input type="text"
			value="content here ..." class="focus">
	</div>
	<div class="group fixed">
		<label>Text input with notice</label> <input type="text"
			value="content here ...">
		<p class="note">This is a sample note</p>
	</div>
	<div class="group fixed">
		<label>Disabled text input</label> <input type="text"
			value="content here ..." class="disabled">
	</div>
	<div class="group fixed">
		<label>Invalid text content</label> <input type="text"
			value="content here ..." class="error">
	</div>
	<div class="group fixed">
		<label>Textarea</label>
		<textarea rows="12" cols="20">content here ...</textarea>
	</div>
</form>